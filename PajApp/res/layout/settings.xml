<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Black" >

    <com.google.android.gms.common.SignInButton
        android:id="@+id/GooglePlusSigninButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:onClick="onClick" >
    </com.google.android.gms.common.SignInButton>

    <Switch
        android:id="@+id/switchGPlus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/GooglePlusSigninButton"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textViewGPlusname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/GooglePlusSigninButton"
        android:layout_below="@+id/switchGPlus"
        android:layout_marginTop="136dp"
        android:text="G+ disconnected"
        android:textColor="@color/bigWhite" />

    <ImageButton
        android:id="@+id/fbButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/switchGPlus"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:onClick="onClick"
        android:src="@drawable/com_facebook_logo" />

    <TextView
        android:id="@+id/textViewFBname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewGPlusname"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:text="Facebook disconnected"
        android:textColor="@color/bigWhite" />

</RelativeLayout>