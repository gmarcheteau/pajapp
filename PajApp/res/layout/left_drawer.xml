<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageButton
        android:id="@+id/buttonCloseLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="onClick"
        android:src="@android:drawable/ic_media_ff" />

    <ImageButton
        android:id="@+id/buttonLevel3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonLevel2"
        android:layout_below="@+id/buttonLevel2"
        android:layout_marginTop="20dp"
        android:background="@color/LightGrey"
        android:enabled="false"
        android:onClick="onClick"
        android:src="@drawable/ic_launcher" />

    <ImageButton
        android:id="@+id/buttonLevel1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:background="@color/red"
        android:onClick="onClick"
        android:src="@drawable/ic_launcher" />

    <ImageButton
        android:id="@+id/buttonLevel2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonLevel1"
        android:layout_below="@+id/buttonLevel1"
        android:layout_marginTop="20dp"
        android:background="@color/LightGrey"
        android:enabled="false"
        android:onClick="onClick"
        android:src="@drawable/ic_launcher" />

    <ImageButton
        android:id="@+id/buttonLevel4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonLevel3"
        android:layout_below="@+id/buttonLevel3"
        android:layout_marginTop="20dp"
        android:background="@color/LightGrey"
        android:enabled="false"
        android:onClick="onClick"
        android:src="@drawable/ic_launcher" />

</RelativeLayout>
